<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTacToe"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/ticGameImage"
        android:layout_width="152dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/gameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tac" />

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="194dp"
        android:layout_height="51dp"
        android:layout_marginBottom="67dp"
        android:text="Tic Tic Toe"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enterPlayText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticGameImage" />

    <TextView
        android:id="@+id/enterPlayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="16dp"
        android:text="ENTER PLAYERS"
        android:textColor="@color/purple_500"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player1"
        app:layout_constraintStart_toStartOf="@+id/player1"
        app:layout_constraintTop_toBottomOf="@+id/gameTitle" />

    <Button
        android:id="@+id/ticPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="PLAY"
        android:onClick="nextPage"
        android:background="@drawable/normal_button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2" />

    <EditText
        android:id="@+id/player1"
        android:layout_width="218dp"
        android:layout_height="66dp"
        android:layout_marginBottom="17dp"
        android:ems="10"

        android:hint="Player 1 name"
        android:background="@drawable/edit_text_round"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/player2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterPlayText" />

    <EditText
        android:id="@+id/player2"
        android:layout_width="218dp"
        android:layout_height="66dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Player 2 name"
        android:textStyle="italic"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_round2"
        android:textAlignment="center"

        app:layout_constraintBottom_toTopOf="@+id/ticPlayButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />


</androidx.constraintlayout.widget.ConstraintLayout>