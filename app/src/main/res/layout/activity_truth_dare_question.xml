<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azureblue"
    tools:context=".TruthDareQuestion">

    <TextView
        android:id="@+id/statement"
        android:layout_width="349dp"
        android:layout_height="400dp"
        android:layout_marginTop="136dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/doneIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notDoneIcon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statement"
        app:srcCompat="@drawable/done" />

    <ImageButton
        android:id="@+id/notDoneIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statement"
        app:srcCompat="@drawable/notdone" />

    <TextView
        android:id="@+id/doneIconDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/doneIcon"
        app:layout_constraintStart_toStartOf="@+id/doneIcon"
        app:layout_constraintTop_toBottomOf="@+id/doneIcon" />

    <TextView
        android:id="@+id/notDoneIconDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="not"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/notDoneIcon"
        app:layout_constraintStart_toStartOf="@+id/notDoneIcon"
        app:layout_constraintTop_toBottomOf="@+id/notDoneIcon" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+30"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/doneIcon"
        app:layout_constraintEnd_toEndOf="@+id/doneIcon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/doneIcon" />

    <TextView
        android:id="@+id/truthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Truth"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>